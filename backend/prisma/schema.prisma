generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  orders   Order[]
  signins  Signin[]
  role String @default("USER") // 新增這行，可設為 "ADMIN" 或 "USER"
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  price       Float
  description String
  image       String?
  orders      Order[]
}

model Order {
  id        Int     @id @default(autoincrement())
  userId    Int
  productId Int
  quantity  Int
  user      User    @relation(fields: [userId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
}

model Signin {
  id     Int    @id @default(autoincrement())
  userId Int
  date   DateTime
  user   User   @relation(fields: [userId], references: [id])
}
